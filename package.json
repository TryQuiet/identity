{
  "name": "@zbay/identity",
  "version": "1.0.0",
  "description": "Zbay tools for creating certificate and signing messages",
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test-ci": "jest --colors --collectCoverage --ci",
    "lint": "eslint --ext .jsx,.js,.ts,.tsx ./src/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ZbayApp/identity.git"
  },
  "keywords": [
    "zbay",
    "identity",
    "certificate"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ZbayApp/identity/issues"
  },
  "homepage": "https://github.com/ZbayApp/identity#readme",
  "files": [
    "/lib/**/*"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": ".*\\.test\\.(t|j)s$",
    "testEnvironment": "node"
  },
  "dependencies": {
    "pkijs": "^2.1.95",
    "@peculiar/webcrypto": "^1.1.7",
    "node-webcrypto-ossl": "^2.1.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.17.3",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.28.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.2"
  }
}
