{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "lib": [
      "es6",
      "dom"
    ]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}